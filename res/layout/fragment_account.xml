<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/account_view_bg"
    android:clickable="true"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_titlebar_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn_state"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/fra_account_back_btn"
            />
        <TextView 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/fra_account_title"
        android:textColor="@android:color/white"
        android:background="@drawable/main_titlebar_right_bg"
        android:layout_centerHorizontal="true"
        android:id="@+id/fra_userinfo_title_tv"
        />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_titlebar_highlight"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/account_login_bg"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            >
            <EditText 
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:background="@drawable/edittext_bg"
               android:hint="请输入用户昵称或邮箱"
               android:singleLine="true"
             />
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_name_bg"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            >
            <EditText 
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:hint="请输入密码"
                android:password="true"
                android:singleLine="true"
            />
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/account_pwd_bg"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/account_login_state"
            android:id="@+id/fra_account_login_btn"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/account_regist_state"
            android:id="@+id/fra_account_regist_btn"
            />
    </LinearLayout>
</LinearLayout>