<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/visitorlist_view_bg"
    android:clickable="true"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_titlebar_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn_state"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/act_editdiary_back_btn"
            />
        <TextView 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/fra_editdiary_title"
        android:textColor="@android:color/white"
        android:background="@drawable/main_titlebar_right_bg"
        android:layout_centerHorizontal="true"
        />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/diary_save_btn_state"
            android:layout_marginTop="4dp"
            android:id="@+id/act_editdiary_save_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_titlebar_highlight"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <EditText 
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/diary_edit_bg"
        android:hint="说点什么吧..."
        android:id="@+id/act_editdiary_value_et"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:paddingBottom="40dp"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/act_editdiary_value_et"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/act_editdiary_pic_layout"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/editdiary_add_image_btn_state"
            android:id="@+id/act_editdiary_add_image_btn"
            />
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diary_setting_bg"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可见范围"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公开"
                />
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diary_flag_true"
                android:layout_marginLeft="5dp"
                android:id="@+id/act_editdiary_public_btn"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不公开"
                />
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diary_flag_false"
                android:layout_marginLeft="5dp"
                android:id="@+id/act_editdiary_private_btn"
                />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>