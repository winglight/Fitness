<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/visitorlist_view_bg"
    android:clickable="true"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_titlebar_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn_state"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/fra_invitepartner_back_btn"
            />
        <TextView 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="邀请朋友成为拍档"
        android:textColor="@android:color/white"
        android:background="@drawable/main_titlebar_right_bg"
        android:layout_centerHorizontal="true"
        />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_btn_state"
            android:layout_marginTop="4dp"
            android:id="@+id/fra_invitepartner_myfriends_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_titlebar_highlight"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fitnesscase_value_bg"
        android:layout_marginTop="20dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果您想邀请的朋友还不是瘦身1+1成员，那就赶紧邀请他(她)成为瘦身1+1d的一员吧！！！"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/send_invite_btn_state"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果您想邀请的朋友还是瘦身1+1成员，请输入对方的ID号，我不会告诉你在好友主页里面也可以直接邀请成为拍档的"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"
            />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="你的留言"
            android:id="@+id/fra_invitepartner_msg_et"
            />
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="朋友ID号"
            android:id="@+id/fra_invitepartner_id_et"
            android:numeric="integer"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/send_invite_btn_state"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>