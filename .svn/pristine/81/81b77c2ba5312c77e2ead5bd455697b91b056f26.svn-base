<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/weightin_dialog_bg"  
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wheel_bg"
        android:layout_centerInParent="true"
        android:id="@+id/layout"
        >
        <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center"
             android:layout_margin="20dp"
            >
        <com.sythealth.fitness.view.WheelView 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/view_weight_wv1"
        />
        <LinearLayout 
	      android:layout_width="2dip"
	      android:layout_height="match_parent"
	      android:background="@android:color/black"
	      /> 
       <com.sythealth.fitness.view.WheelView 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/view_weight_wv2"
        />
       </LinearLayout>
    </LinearLayout>
    <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/tips_bg"
           android:layout_below="@id/layout"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />
</RelativeLayout>