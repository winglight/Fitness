<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/visitorlist_view_bg"
    android:clickable="true"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_titlebar_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn_state"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/act_herolist_back_btn"
            />
        <TextView 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/act_herolist_title"
        android:textColor="@android:color/white"
        android:background="@drawable/main_titlebar_right_bg"
        android:layout_centerHorizontal="true"
        />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_titlebar_highlight"
            />
    </RelativeLayout>
    <fragment 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/act_herolist_fragment"
        android:name="com.sythealth.custom.fragment.MyHeroListFragment"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pk_mine_btn_unhighlighted"
            android:id="@+id/act_herolist_mine_btn"
            android:enabled="false"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pk_local_btn_state"
            android:layout_centerInParent="true"
            android:id="@+id/act_herolist_local_btn"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pk_nationwide_btn_state"
            android:layout_alignParentRight="true"
            android:id="@+id/act_herolist_nationwide_btn"
            />
    </RelativeLayout>
</LinearLayout>