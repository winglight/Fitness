<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tile_view_bg"
    >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/act_ph_title"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@drawable/titlebar_bg"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" 
                android:src="@drawable/s_logo_shrink"
                />            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"
                    android:text="爱因斯坦"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sex"
                    android:layout_centerInParent="true"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:text="id:0001"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"
                    android:text="10级"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    android:text="25岁"
                    />
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:layout_centerVertical="true"
                    android:text="10级"
                    />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_state"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" 
                        android:text="勋章列表"
                        android:textColor="@android:color/white"
                        android:id="@+id/act_personalhome_medal_btn"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="快来发表你的瘦身宣言吧！！！"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:enabled="false"
            android:layout_centerVertical="true"
            android:id="@+id/act_personalhome_edit"
            />
        <Button 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/button_state"
            android:text="@string/act_ph_edit"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/act_personalhome_edit_btn"
            />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="方案"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:id="@+id/act_personalhome_case_btn"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="战绩"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:id="@+id/act_personalhome_record_btn"
            />
            <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="档案"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:id="@+id/act_personalhome_info_btn"
            />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="日记"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:id="@+id/act_personalhome_diary_btn"
            />
            <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_state"
            android:text="访客"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:id="@+id/act_personalhome_visitor_btn"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>