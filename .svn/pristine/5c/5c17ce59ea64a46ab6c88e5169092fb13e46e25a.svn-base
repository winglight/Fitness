<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/body_data_body_girl"
    android:clickable="true"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_titlebar_bg"
        >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn_state"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:id="@+id/fra_bodytype_back_btn"
            />
        <TextView 
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/fra_bt_title"
        android:textColor="@android:color/white"
        android:background="@drawable/main_titlebar_right_bg"
        android:layout_centerHorizontal="true"
        android:id="@+id/fra_userinfo_title_tv"
        />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_titlebar_highlight"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/body_data_option_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准"
            android:background="@drawable/body_data_rule_btn"
            />
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="您的"
            android:background="@drawable/body_data_mine_btn"
            />
        </LinearLayout>         
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/body_data_min_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/body_data_max_btn" />
    </FrameLayout>

</LinearLayout>